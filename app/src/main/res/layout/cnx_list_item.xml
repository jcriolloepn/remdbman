<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layout_texts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cnx_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="CNX_1" />

            <TextView
                android:id="@+id/cnx_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="localhost" />

            <TextView
                android:id="@+id/cnx_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="user01" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_buttons"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/layout_texts"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_cnx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@android:drawable/ic_delete" />

            <ImageView
                android:id="@+id/update_cnx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>


    </RelativeLayout>
</layout>