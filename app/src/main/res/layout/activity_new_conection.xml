<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewConection">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="NUEVA CONEXÓN"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text"
                android:hint="Descripción"
                android:fontFamily="casual"
                android:padding="16dp" />

            <Spinner
                android:id="@+id/vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_description"
                android:layout_margin="16dp" />

            <TextView
                android:id="@+id/parameters_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor"
                android:text="PARAMETROS DE CONEXION"
                android:fontFamily="casual"
                android:padding="16dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/text_hostname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/parameters_label"
                android:padding="16dp"
                android:hint="Host remoto"
                android:fontFamily="casual"/>

            <EditText
                android:id="@+id/text_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_hostname"
                android:padding="16dp"
                android:hint="Puerto"
                android:fontFamily="casual"/>

            <EditText
                android:id="@+id/text_database_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_port"
                android:padding="16dp"
                android:hint="Nombre de Base de Datos"
                android:fontFamily="casual"/>

            <EditText
                android:id="@+id/text_schema_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_database_name"
                android:padding="16dp"
                android:hint="Nombre del esquema"
                android:fontFamily="casual"/>

            <EditText
                android:id="@+id/text_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_schema_name"
                android:padding="16dp"
                android:hint="Usuario"
                android:fontFamily="casual"/>

            <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_user_name"
                android:inputType="textPassword"
                android:padding="16dp"
                android:hint="Contraseña"
                android:fontFamily="casual"/>

            <LinearLayout
                android:id="@+id/ssh_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_password"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Se usará SSH"
                    android:fontFamily="casual"/>

                <Switch
                    android:id="@+id/use_ssh_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ssh_parameters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ssh_confirmation"
                android:orientation="vertical"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/ssh_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:hint="Servidor SSH" />

                <EditText
                    android:id="@+id/ssh_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ssh_server"
                    android:padding="16dp"
                    android:hint="Puerto SSH" />

                <EditText
                    android:id="@+id/ssh_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ssh_port"
                    android:padding="16dp"
                    android:hint="Usuario" />

                <EditText
                    android:id="@+id/ssh_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ssh_user"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:hint="Credencial" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#03A9F4"
        android:text="GUARADAR CONEXION"
        android:fontFamily="monospace"/>

</RelativeLayout>
</layout>